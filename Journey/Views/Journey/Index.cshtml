@model Journey.Models.Habit[]

@{
    ViewBag.Title = "Index";
}

<head>
    <link href="/content/normalize.css" rel="stylesheet" />
    <link href="/content/main.css" rel="stylesheet" />
    <title>Journey</title>
</head>

<body>
    <div class="sider">
        <div class="new-habit"><h5 class="plus"><a>+</a></h5></div>
        <ul class="main-menu">
            <li>Home</li>
            <li>Friends</li>
            <li>Your Journey</li>
        </ul>
    </div>
    <div class="wrapper">
        <div class="habit-overview clearfix">
            @foreach (var habit in Model)
            {
                <div class="habit">
                    <div class="habit-top">
                        <h2 class="habit-name">@habit.Name</h2>
                        <button class="task-completed"></button>
                    </div>
                    <div class="habit-bottom">
                        <p class="count">@habit.DayCount in a row</p>
                    </div>
                </div>
            }
        </div>
    </div>
    <footer class="main-footer">
        <div class="footer-shadow">
            <span class="copyright">&copy;2018 Journey.</span>
        </div>
    </footer>

</body>

